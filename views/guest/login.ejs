<form id="login-form" hx-post="/api/login" hx-target="#login-response">
    <label for="nameLogin">Name:</label>
    <input type="text" id="nameLogin" name="name" placeholder="First and last name" required><br>

    <label for="passwordLogin">Password:</label>
    <input type="password" id="passwordLogin" name="password" placeholder="Enter you password" required><br>

    <input type="submit" value="Login">
</form>
<div id="login-response"></div>
<img id="spinner" class="htmx-indicator" src="/img/loads.svg" />

<script src="/js/login.min.js"></script>