<div>
    <input type="search" name="search" placeholder="Search" _="on keyup
        if the event's key is 'Escape'
            set my value to ''
            trigger keyup
        else
            show <tr/> in #products 
            when its textContent.toLowerCase() 
            contains my value.toLowerCase()">
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody id="products">
            <% product.forEach((p, i)=> { %>
                <tr>
                    <td>
                        <%= i+1 %>
                    </td>
                    <td>
                        <%= p.name %>
                    </td>
                    <td>
                        <%= p.stock %>
                    </td>
                    <td>
                        <%= p.description %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>